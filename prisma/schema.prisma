// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model App {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  logo        String?
  bundle      String    @unique
  created_at  DateTime  @default(now())
  description String?
  size        Int

  // Relations
  bundles     Bundle[]  @relation("AppBundles")
}

// Table Bundle
model Bundle {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  created_at  DateTime  @default(now())

  // Relations
  apps        App[]     @relation("AppBundles")
}